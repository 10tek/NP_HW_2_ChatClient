<Window x:Class="ChatClientHw2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClientHw2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="450*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="350*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="textTB" TextWrapping="Wrap" Grid.Column="1" Grid.Row="1" FontSize="18" Background="AliceBlue"/>
        <TextBox x:Name="userTB" Grid.Row="1" Grid.Column="0" FontSize="18" FontWeight="Black"/>
        <Button x:Name="button" Content="Отправить" Click="ButtonClick" Grid.Column="2" Grid.Row="1" FontSize="16" FontWeight="Black"/>
        <Label x:Name="messageHistory" FontSize="16" Grid.ColumnSpan="3"/>
    </Grid>
</Window>
